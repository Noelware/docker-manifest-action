{
    "extends": "@augu/tsconfig",
    "compilerOptions": {
        "moduleResolution": "node",
        "removeComments": true,
        "module": "ESNext",
        "target": "ESNext",
        "types": ["node"],
        "rootDir": ".",
        "noEmit": true // tsx does this, so useless for `tsc` to do it
    },
    "exclude": ["node_modules"],
    "include": ["**/*.ts", "eslint.config.js"]
}
