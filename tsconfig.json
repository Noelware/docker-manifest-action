{
    "extends": "@augu/tsconfig",
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "typeRoots": ["./src/@types", "./node_modules/@types"],
        "types": ["node", "bun"],
        "outDir": "./build",
        "skipLibCheck": true,
        "noEmit": true
    },
    "exclude": ["node_modules"],
    "include": ["**/*.ts"]
}
